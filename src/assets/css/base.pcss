@import url('https://fonts.googleapis.com/css?family=Comfortaa');
@import './variables.pcss';

html,
body,
main,
div {
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
  font-family: 'Comfortaa', sans-serif;
}

.app-body {
  display: flex;
  justify-content: center;
  align-items: center;
  background: radial-gradient(var(--primary-color), var(--secondary-color));
}
